<%
  var inArray = function(arr, item) {
     for(var i = 0; i < arr.data.length; i++) {
            if(arr.data[i].name == item) {
                return true;
            }
     }
     return false;
   }
%>

<article class="post post-list" itemscope="" itemtype="http://schema.org/BlogPosting">
<% if(!inArray(post.categories,'说说')){ %>
  <div class="post-entry">
    <div class="feature">
      <a href="<%- url_for(post.path) %>">
        <div class="overlay">
          <i class="iconfont icon-text">
          </i>
        </div>
        <img width="150" height="150" src="<%= post.photos[0] %>" class="attachment-post-thumbnail size-post-thumbnail wp-post-image" alt="" >
      </a>
    </div>
    <h1 class="entry-title">
    <a href="<%- url_for(post.path) %>">
    <%= post.title %></a>
    </h1>
    <div class="p-time">
      <i class="iconfont icon-time">
      </i>
    <%= date(post.date, 'YYYY-M-D') %></div>
    <p>
    <%= post.description %></p>
    <footer class="entry-footer">
      <div class="post-more">
        <a href="<%- url_for(post.path) %>">
          <i class="iconfont icon-caidan">
          </i>
        </a>
      </div>
      <div class="info-meta">
        <div class="comnum">
          <span>
            <i class="iconfont icon-mark"></i>
            <span class="dsq-postid"> N 条评论 </span>
          </span>
        </div>
        <div class="views">
          <span>
              <i class="iconfont icon-attention"></i>
              <span id="<%- url_for(post.path) %>" class="leancloud_visitors">热度：<span class="leancloud-visitors-count"></span>
              </span>
          </span>
        </div>
      </div>
    </footer>
  </div>
  <hr>
<% } else { %>
  <div class="post-entry">
    <div class="feature">
        <a href="<%- url_for(post.path) %>">
        <div class="overlay">
          <i class="iconfont icon-text">
          </i>
        </div>
        <img width="150" height="150" src="<%= post.photos[0] %>" class="attachment-post-thumbnail size-post-thumbnail wp-post-image" alt="" >
    </div>
    <h1 class="entry-title">
    <a href="<%- url_for(post.path) %>">
    <%= post.title %></a>
    </h1>
    <div class="p-time">
      <i class="iconfont icon-time">
      </i>
    <%= date(post.date, 'YYYY-M-D') %></div>
    <p>
    <%= post.description %></p>
  </div>
  <hr>
<% } %>
</article>